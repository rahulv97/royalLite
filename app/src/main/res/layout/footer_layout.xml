<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gradient_bg"
    android:id="@+id/app_footer"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/foot_vid"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginBottom="-5dp"
                android:src="@drawable/vid_foot_ic"
                android:layout_above="@+id/foot_video_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Videos"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/foot_video_txt"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/foot_vid_down"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/search_foot_ic"
                android:layout_above="@+id/foot_vid_down_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Sites"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/foot_vid_down_txt"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/foot_music"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="4dp"
                android:src="@drawable/music_foot_ic"
                android:layout_above="@+id/foot_music_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Music"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/foot_music_txt"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/foot_more"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/other_ic"
                android:layout_above="@+id/foot_more_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="More"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="10dp"
                android:id="@+id/foot_more_txt"/>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>